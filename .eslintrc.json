{
  "env": {
    "node": true,
    "es2022": true,
    "browser": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error"
  },
  "ignorePatterns": [
    "app.js",
    "styles.css",
    "dist/",
    "node_modules/",
    "playwright-report/",
    "test-results/"
  ]
}

