# Cloudflare Pages custom headers
# https://developers.cloudflare.com/pages/platform/headers/

# Security headers for all pages
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=self, microphone=(), camera=()
  X-XSS-Protection: 1; mode=block

# Cache static assets for 1 year
/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

/*.json
  Cache-Control: public, max-age=3600, must-revalidate

# Cache images
/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

# HTML files - shorter cache with revalidation
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Service worker - no cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# programs.json - cache with revalidation (data changes periodically)
/programs.json
  Cache-Control: public, max-age=3600, must-revalidate

# Block admin.html from public access (should be protected by Cloudflare Access)
# This is a safety measure in case the file accidentally gets deployed
/admin.html
  X-Robots-Tag: noindex, nofollow
  Cache-Control: no-cache, no-store, must-revalidate

