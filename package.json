{
  "name": "mental-health-resource-navigator",
  "version": "1.0.0",
  "description": "Neutral post-discharge mental health resource navigator for Dallas-Fort Worth area youth",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --watch",
    "minify": "node build.js --minify",
    "validate-filters": "node scripts/validate-filters.js",
    "validate-data": "node scripts/validate-data.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "audit": "lhci autorun --config=lighthouserc.json",
    "verify": "npm run build && npm run validate-data && npm run test:e2e && npm run audit"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "esbuild": "^0.25.0",
    "http-server": "^14.1.1"
  },
  "keywords": [
    "mental-health",
    "resource-navigator",
    "dallas",
    "texas"
  ],
  "author": "",
  "license": "MIT"
}


